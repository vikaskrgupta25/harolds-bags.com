<section class="section">
<p>{{ section.settings.Block_text_2_rows }}</p>
{% schema %}
{
  "name": "Two Columns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is a heading"
    },
    {
      "type": "textarea",
      "id": "left_column_text",
      "label": "Left Column Text",
      "default": "This is the left column."
    },
    {
      "type": "textarea",
      "id": "right_column_text",
      "label": "Right Column Text",
      "default": "This is the right column."
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size",
      "min": 16,
      "max": 48,
      "default": 24,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Two Columns",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="two-columns-section">
  <h2 class="heading" style="text-align: {{ section.settings.heading_alignment }}; font-size: {{ section.settings.heading_font_size }}px;">
    {{ section.settings.heading }}
  </h2>
  <div class="two-columns">
    <div class="left-column">
      {{ section.settings.left_column_text }}
    </div>
    <div class="right-column">
      {{ section.settings.right_column_text }}
    </div>
  </div>
</div>

<style>
.two-columns {
  display: flex;
}
.left-column, .right-column {
  flex: 1;
  padding: 10px;
}
</style>
</section>
